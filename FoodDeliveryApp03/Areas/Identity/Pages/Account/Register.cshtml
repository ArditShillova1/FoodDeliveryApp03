@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
</head>
<body>
    <section class="register">
        <div class="register_box">
            <div class="left">
                <div class="top_link">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="https://drive.google.com/u/0/uc?id=16U__U5dJdaTfNGobB_OpwAJ73vM50rPV&export=download" alt="">
                        Return home
                    </a>
                </div>
                <div class="contact">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h3>Create a new account</h3>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <div class="row">
                                <div class="col">
                                    <div class="form-floating">
                                        <input asp-for="Input.Firstname" class="form-control" autocomplete="username" aria-required="true" />
                                        <label asp-for="Input.Firstname">First Name</label>
                                        <span asp-validation-for="Input.Firstname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-floating">
                                        <input asp-for="Input.Lastname" class="form-control" autocomplete="username" aria-required="true" />
                                        <label asp-for="Input.Lastname">Last Name</label>
                                        <span asp-validation-for="Input.Lastname" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        
                        <div class="form-floating">
                            <input asp-for="Input.Address" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Address">Address</label>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating">
                            <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.PhoneNumber">Phone Number</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="role-buttons">
                            <button type="button" class="btn-role" data-role="User">
                                <div class="button-image user"></div>
                            </button>
                            <button type="button" class="btn-role" data-role="Restaurant-Manager">
                                <div class="button-image manager"></div>
                            </button>
                            <input asp-for="Input.Role" type="hidden" id="selectedRole" />
                        </div>

                        
                        <div id="restaurantField" style="display: none;">
                            <div class="form-floating">
                                <input asp-for="Input.RestaurantName" class="form-control" autocomplete="username" />
                                <label asp-for="Input.RestaurantName">Restaurant Name</label>
                                <span asp-validation-for="Input.RestaurantName" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

@section Scripts {
    <script>
        document.querySelectorAll('.btn-role').forEach(function (button) {
            button.addEventListener('click', function () {
                var selectedRole = this.getAttribute('data-role');
                document.getElementById('selectedRole').value = selectedRole;

                if (selectedRole === "Restaurant-Manager") {
                    document.getElementById('restaurantField').style.display = 'block';
                } else {
                    document.getElementById('restaurantField').style.display = 'none';
                }
            });
        });
    </script>
}
    <partial name="_ValidationScriptsPartial" />
