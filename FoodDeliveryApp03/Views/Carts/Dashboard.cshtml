<div class="container mt-5">
    <h1>Restaurant Dashboard</h1>
    <div id="notification-container" class="mt-3" style="max-width:350px;">
    </div>
    <form id="delete-all-notifications-form" action="/Notifications/DeleteAllNotifications" method="POST">
        <button type="submit" class="btn btn-danger mt-3">Delete All Notifications</button>
    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.12/signalr.min.js"></script>

<script>
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/restaurantNotificationHub")
        .build();

    connection.on("ReceiveOrderNotification", (orderId, totalAmount, menuItemPhotoUrl, userAddress, notificationId, restaurantId) => {
        const notificationMessage = `
                New order received for Restaurant: <p>${restaurantId}</p>
                Order ID:<p>${orderId}</p>
                Total Amount: <p>$${totalAmount.toFixed(2)}</p>
                Menu Item Photo: <p><img src="${menuItemPhotoUrl}" alt="Menu Item Photo" width="50" height="50" style="margin-left: 10px; margin-right: 10px;"></p>
                User Address:<p>${userAddress}</p>
            `;
        addNotification(notificationMessage, notificationId, restaurantId);
    });

    connection.start()
        .then(() => {
            console.log("SignalR connected.");
            loadNotificationsFromDatabase();
        })
        .catch((error) => {
            console.error("SignalR connection error:", error);
        });

    function addNotification(notificationMessage, notificationId, restaurantId) {
        const notificationContainer = document.getElementById("notification-container");
        const notificationElement = document.createElement("div");
        notificationElement.className = "card mb-4 shadow-sm";
        notificationElement.innerHTML = `
                <div class="card-body">
                    ${notificationMessage}
                </div>
            `;
        notificationContainer.appendChild(notificationElement);

    
    }
    async function loadNotificationsFromDatabase() {
        try {
            const response = await fetch('/Notifications/GetNotifications');
            if (response.ok) {
                const notifications = await response.json();
                notifications.forEach(notification => {
                    const notificationMessage = `
                            New order received for Restaurant: <p>${notification.userId}</p>
                            Order ID: <p>${notification.orderId}</p>
                            Total Amount: <p>$${notification.totalAmount.toFixed(2)}</p>
                            Menu Item Photo: <p><img src="${notification.menuItemPhotoUrl}" alt="Menu Item Photo" width="150" height="150" style="margin-left: 10px; margin-right: 10px;"></p>
                            User Address: <p>${notification.userAddress}</p>
                        `;
                    addNotification(notificationMessage, notification.id, notification.userId);
                });
            } else {
                console.error('Failed to fetch notifications:', response.statusText);
            }
        } catch (error) {
            console.error('Error fetching notifications:', error);
        }
    }
</script>
