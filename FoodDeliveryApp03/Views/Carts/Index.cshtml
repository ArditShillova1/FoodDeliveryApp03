@model Cart

<h1>Shopping Cart</h1>

<table>
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.MenuItem.Name</td>
                <td>@item.Quantity</td>
                <td>@item.MenuItem.Price</td>
                <tb><img src="@Url.Content(item.MenuItem.ImagePath)" alt="Menu Item Image" /></tb>
                <td>@(item.Quantity * item.MenuItem.Price)</td>
                <td>
                                   
                    <form asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="menuItemId" value="@item.MenuItem.Id" />
                        <button type="submit">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Checkout", "Carts")">Proceed to Checkout</a>
<div>
    <a asp-action="ClearCart">Clear Cart</a>
</div>
